adams.flow.control.Flow -annotation "Let\\\'s the user choose a dataset to download (as zip or tar.gz).\\nUses host/user/password from the global UFDL Preferences." -flow-execution-listener adams.flow.execution.NullListener -flow-restart-manager adams.flow.control.flowrestart.NullManager
 adams.flow.standalone.UFDLConnection
 adams.flow.source.UFDLSource -action adams.flow.source.ufdl.ListDatasets
 adams.flow.transformer.SpreadSheetSelectSubset -message "Please select datasets to download"
 adams.flow.transformer.SpreadSheetVariableRowIterator -columns pk,name -variable-prefix dataset_
 adams.flow.control.Breakpoint -scope-restriction adams.flow.execution.debug.NoScopeRestriction -condition adams.flow.condition.bool.Expression
 adams.flow.control.Trigger -name "select output file for dataset"
  adams.flow.source.EnterManyValues -stop-if-canceled true -message "Downloading @{dataset_name}/@{dataset_pk}" -value "adams.flow.source.valuedefinition.DefaultValueDefinition -name output -display \"Output file\" -type FILE_ABSOLUTE -default-value . -use-forward-slashes true" -output-type MAP
  adams.flow.transformer.MapToVariables
 adams.flow.control.Trigger -name "download dataset"
  adams.flow.source.Variable -var-name dataset_pk -conversion adams.data.conversion.StringToInt
  adams.flow.transformer.UFDLTransformer -action adams.flow.transformer.ufdl.LoadDataset
  adams.flow.sink.UFDLSink -action "adams.flow.sink.ufdl.DownloadDataset -output-file @{output}"